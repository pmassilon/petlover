<%= form_for @pet, url: presenter[:form][:path], method: presenter[:form][:method] do |f| %>
  <div class="row">
    <div class="col col-sm-6 offset-sm-3">
      <%= render "layouts/form_errors_messages", object: presenter[:object] %>
    </div>
  </div>
  <div class="row">
    <div class="col col-sm-6 offset-sm-3">
      <div class="card">
        <div class="card-body">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Qual o nome do seu Pet?' %>
          </div>

          <div class="form-group">
            <%= f.label :kind %>
            <%= f.select :kind, presenter[:kinds], {}, {class: 'form-control'} %>
          </div>

          <div class="form-group">
            <%= f.label :monthly_cost %>
              <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">R$</div>
              </div>
              <%= f.text_field :monthly_cost, value: number_to_currency(presenter[:monthly_cost][:value], unit: ''), class: 'form-control', placeholder: 'Qual o custo mensal que seu Pet tem?' %>
            </div>
          </div>

          <div class="actions mt-4">
            <div class="row">
              <div class="col col-sm-6">
                <%= link_to fa_icon('times-circle-o', text: 'Cancelar'), person_root_path, class: 'btn btn-outline-danger' %>
              </div>
              <div class="col col-sm-6 text-sm-right">
                <% if presenter[:new_record?] %>
                  <%= f.button fa_icon('plus-circle', text: 'Adicionar novo Pet'), class: 'btn btn-outline-primary' %>
                <% else %>
                  <%= f.button fa_icon('cloud-upload', text: 'Atualizar'), class: 'btn btn-outline-primary' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
